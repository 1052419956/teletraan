{% load utils %}
        {% if env.description and not env.description.isspace %}
        <div>
        <div class="panel panel-default" id="envDescriptionPanelId">
            <div class="panel-heading clearfix">
                <h4 class="panel-title pull-left">{{ env.envName }} Description</h4>
            </div>

            <div id="displayEnvDescription">
                <div id="envDescription" class="modal-body">{{ env.description }}</div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        <button id="editDescriptionBtnId" class="btn btn-primary pull-right">Edit</button>
                    </div>
                </div>

            </div>


            <div id="editEnvDescription">
                <form id="envDescriptionFormId">

                    <input id="envDescriptionInputId" class="form-control modal-body" name="description" type="text"
                           value="{{ env.description }}"/>
                    {% csrf_token %}
                </form>

                <div class="panel-footer clearfix">
                    <div class="pull-right">

                        <button id="resetEnvDescriptionBtnId" class="btn btn-default"
                                data-loading-text="Reloading...">
                            <span class="glyphicon glyphicon-refresh"></span> Reload
                        </button>
                        <button id="saveEnvDescriptionBtnId" class="btn btn-primary"
                                data-loading-text="Saving...">
                            <span class="glyphicon glyphicon-floppy-save"></span> Save
                        </button>
                    </div>
                    <button id="cancelDescriptionBtnId" class="btn btn-default center-block">
                        Cancel
                    </button>
                </div>
            </div>

        </div>
            </div>

    {% endif %}

    <script>
    $(function () {

        $('#editEnvDescription').hide();

        $('#editDescriptionBtnId').click(function (){
            $('#displayEnvDescription').hide();
            $('#editEnvDescription').show();
        });

        $('#cancelDescriptionBtnId').click(function (){
            $('#editEnvDescription').hide();
            $('#displayEnvDescription').show();
        });

        console.log($("#envDescriptionFormId").serialize());

        $('#saveEnvDescriptionBtnId').click(function () {
            var btn = $(this);
            $.ajax({
                type: 'POST',
                url: '/env/{{ env.envName }}/{{ env.stageName }}/update_description/',
                data: $("#envDescriptionFormId").serialize(),
                dataType: 'json',
                beforeSend: function () {
                    btn.button('loading');
                },
                success: function (data) {
                    if(data != null && data.success == false) {
                        $('#errorBannerId').append(data.error);
                        $('#errorBannerId').show();
                    } else {
                        $("#envDescriptionPanelId").parent().html(data.html);
                        $('#errorBannerId').empty().hide();
                    }
                    btn.button('reset');
                },
                error: function (data) {
                    $('#errorBannerId').append(data.responseText);
                    $('#errorBannerId').show();
                }
            });
        });

        $('#resetEnvDescriptionBtnId').click(function () {
            $('#envDescriptionInputId').val( "{{ env.description }}" );
        });

    });
    </script>
